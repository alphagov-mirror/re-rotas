<div class="govuk-breadcrumbs">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to '/', class: 'govuk-breadcrumbs__link' do %>Home<% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to teams_path, class: 'govuk-breadcrumbs__link' do %>
        Teams
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to team_path(@calendar.team), class: 'govuk-breadcrumbs__link' do %>
        <%= @calendar.team.name %>
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to calendar_path(@calendar), class: 'govuk-breadcrumbs__link' do %>
        <%= @calendar.name %>
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to manual_calendar_events_path(@calendar), class: 'govuk-breadcrumbs__link' do %>
        Events
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to edit_manual_calendar_event_path(@calendar, @event.id), class: 'govuk-breadcrumbs__link' do %>
        Update event
      <% end %>
    </li>
  </ol>
</div>

<h1 class="govuk-heading-xl">
  Add event
</h1>

<%= form_tag manual_calendar_event_path(id: @event.id, manual_calendar_id: @calendar.id), method: :patch do %>
  <%= render partial: 'form' %>

  <%= hidden_field_tag :id, @event.id %>

  <div class="govuk-form-group">
    <%= submit_tag 'Update event', class: 'govuk-button' %>
  </div>
<% end %>

<%= button_to manual_calendar_event_path(@calendar.id, @event.id), method: :delete, class: 'govuk-button' do %>
  Delete event
<% end %>
