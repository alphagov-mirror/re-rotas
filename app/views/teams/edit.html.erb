<div class="govuk-breadcrumbs">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to '/', class: 'govuk-breadcrumbs__link' do %>Home<% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to teams_path, class: 'govuk-breadcrumbs__link' do %>
        Teams
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to team_path(@team), class: 'govuk-breadcrumbs__link' do %>
        <%= @team.name %>
      <% end %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to edit_team_path(@team), class: 'govuk-breadcrumbs__link' do %>
        Edit team
      <% end %>
    </li>
  </ol>
</div>

<h1 class="govuk-heading-xl">
  Edit team
</h1>

<%= form_tag team_path(@team), method: :patch do %>
  <%= render partial: 'form' %>

  <div class="govuk-form-group">
    <%= submit_tag 'Update team', class: 'govuk-button' %>
  </div>
<% end %>
